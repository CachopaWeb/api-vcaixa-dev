{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "vcaixa.dev API",
        "description": "Documentação da API vcaixa.dev",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "servers": [
        {
            "url": "/",
            "description": "Desenvolvimento local, ou no Heroku"
        }
    ],
    "tags": [
        {
            "name": "Movimentações",
            "description": "API para cadastros e consultas de movimentações"
        }
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/movimentacoes": {
            "get": {
                "parameters": [
                    {
                        "name": "dataInicial",
                        "in": "query",
                        "required": false,
                        "description": "Data inicio do movimento",
                        "type": "string",
                        "format":"date"
                    },
                    {
                        "name": "dataFinal",
                        "in": "query",
                        "required": false,
                        "description": "Data final do movimento",
                        "type": "string",
                        "format": "date"
                    }
                ],
                "tags": [
                    "Movimentações"
                ],
                "summary": "Busca movimentações do dia",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Movimento"
                        }
                    },
                    "400": {
                        "description": "Falha. Movimentação não encontrados."
                    }
                }
            },
            "post": {
                "tags": [
                    "Movimentações"
                ],
                "summary": "Cria um registro de movimentação",
                "requestBody": {
                    "description": "Objeto Movimentação",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/Movimento"
                            }
                        }
                    }
                },
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "CREATED",
                        "schema": {
                            "$ref": "#/definitions/Movimento"
                        }
                    },
                    "400": {
                        "description": "Falha. Dados incorretos."
                    }
                }
            }
        },
        "/movimentacoes/{categoria}": {
            "parameters": [
                {
                    "name": "categoria",
                    "in": "path",
                    "required": true,
                    "description": "Categoria da movimentação",
                    "type": "string"
                }
            ],
            "get": {
                "tags": [
                    "Movimentações"
                ],
                "summary": "Busca a movimentação pela categoria",
                "parameters": [
                    {
                        "in": "path",
                        "name": "categoria",
                        "required": true,
                        "description": "Categoria da Movimentação",
                        "schema": {
                            "$ref": "#/definitions/categoria"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Movimento"
                        }
                    },
                    "404": {
                        "description": "Falha. Movimentação não encontrada."
                    }
                }
            }
        }
    },
    "definitions": {
        "categoria": {
            "properties": {
                "uuid": {
                    "type": "string"
                }
            }
        },
        "Movimento": {
            "type": "object",
            "properties": {
                "descricao": {
                    "type": "string"
                },
                "categoria": {
                    "type": "string"
                },
                "entrada": {
                    "type": "number"
                },
                "saida": {
                    "type": "number"
                }                
            }
        },
        "Movimentacao": {
            "type": "object",
            "properties": {
                "saldoTotal": {
                    "type": "number"
                },
                "movimentoDia": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/Movimento"
                    }
                }
            }
        }
    }
}